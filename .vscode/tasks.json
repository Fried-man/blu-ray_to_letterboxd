{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start API Server",
            "type": "shell",
            "command": "dart",
            "args": ["run", "bin/server.dart"],
            "options": {
                "cwd": "${workspaceFolder}/blu-ray-api"
            },
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "isBackground": true,
            "problemMatcher": []
        },
        {
            "label": "Start Flutter Web",
            "type": "shell",
            "command": "flutter",
            "args": [
                "run",
                "-d",
                "web-server",
                "--web-port=8082"
            ],
            "options": {
                "cwd": "${workspaceFolder}/app"
            },
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "isBackground": true,
            "problemMatcher": []
        },
        {
            "label": "Start Full App",
            "dependsOn": ["Start API Server", "Start Flutter Web"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        }
    ]
}
